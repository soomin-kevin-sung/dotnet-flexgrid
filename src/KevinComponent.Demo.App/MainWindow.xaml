<Window
	x:Class="KevinComponent.Demo.App.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:KevinComponent;assembly=KevinComponent"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:KevinComponent.Demo.App"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="400"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<GroupBox
			Margin="5,0,5,10"
			Padding="5"
			Header="Demos">
			<c:FlexGrid x:Name="flexGrid" Grid.Row="1"
						ColumnHeaderHeight="25">
				<c:FlexGrid.Bands>
					<c:TextBand
						Width="310"
						Header="Description"
						IsReadOnly="False"
						TextBinding="{Binding Description}" />
					<c:TemplateBand Width="30">
						<c:TemplateBand.CellTemplate>
							<DataTemplate>
								<Button Command="{Binding RunCommand}" Content="Run" />
							</DataTemplate>
						</c:TemplateBand.CellTemplate>
					</c:TemplateBand>
				</c:FlexGrid.Bands>
			</c:FlexGrid>
		</GroupBox>
	</Grid>
</Window>
