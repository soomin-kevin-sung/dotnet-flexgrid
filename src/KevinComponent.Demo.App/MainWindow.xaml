<Window
	x:Class="KevinComponent.Demo.App.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:KevinComponent;assembly=KevinComponent"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:KevinComponent.Demo.App"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="800"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<GroupBox Margin="5,0,5,10" Header="Demos">
			<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
				<Button
					Width="100"
					Height="25"
					Margin="5"
					Content="Code-Behind" />

				<Button
					Width="100"
					Height="25"
					Margin="5"
					Content="MVVM-Binding" />
			</StackPanel>
		</GroupBox>

		<c:FlexGrid Grid.Row="1">
			<c:FlexGrid.Bands>
				<c:TextBand Width="120" Header="밴드1">
					<c:TextBand.Bands>
						<c:TextBand Width="120" Header="밴드1-1" />
						<c:TextBand Width="120" Header="밴드1-2" />
						<c:TextBand Width="120" Header="밴드1-3" />
					</c:TextBand.Bands>
				</c:TextBand>
				<c:TextBand Width="120" Header="밴드2" />
				<c:TextBand Width="120" Header="밴드3" />
				<c:TextBand Width="120" Header="밴드4" />
			</c:FlexGrid.Bands>
		</c:FlexGrid>
	</Grid>
</Window>
