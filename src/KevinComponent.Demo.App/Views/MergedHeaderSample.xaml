<Window
	x:Class="KevinComponent.Demo.App.Views.MergedHeaderSample"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:KevinComponent;assembly=KevinComponent"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:KevinComponent.Demo.App.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MergedHeaderSample"
	Width="800"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<c:FlexGrid x:Name="flexGrid" Margin="5">
			<c:FlexGrid.Bands>
				<c:TextBand Header="Band 1">
					<c:TextBand.Bands>
						<c:TextBand Header="Band 1-1">
							<c:TextBand.Bands>
								<c:TextBand Width="60" Header="Name" />
							</c:TextBand.Bands>
						</c:TextBand>
						<c:TextBand Header="Band 1-2">
							<c:TextBand.Bands>
								<c:TextBand Width="100" Header="BirthDate" />
							</c:TextBand.Bands>
						</c:TextBand>
					</c:TextBand.Bands>
				</c:TextBand>
			</c:FlexGrid.Bands>
		</c:FlexGrid>
	</Grid>
</Window>
